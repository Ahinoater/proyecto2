<div class="container mt-5">
  <!-- Saludo con el correo del usuario -->
  <p class="lead">Hello <%= @resource.email %>!</p>

  <!-- Notificación sobre el cambio de contraseña -->
  <div class="alert alert-success d-flex align-items-center" role="alert">
    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:">
      <use xlink:href="#check-circle-fill"/>
    </svg>
    <div>
      We're contacting you to notify you that your password has been changed.
    </div>
  </div>

  <!-- Información adicional o botones, si es necesario -->
  <div class="mt-4">
    <%= link_to 'Go to Dashboard', dashboard_path, class: 'btn btn-primary' %>
  </div>
</div>
