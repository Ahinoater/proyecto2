<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Blog SAAS - Artículos</title>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body id="page-top">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
      <div class="container">
        <a class="navbar-brand js-scroll-trigger" href="#">Blog SAAS</a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          Menu
          <i class="fa fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <%= link_to 'Mis Artículos', articles_path, class: 'nav-link js-scroll-trigger' %>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Artículos Section -->
    <section class="py-5">
      <div class="container">
        <h1 class="display-4 text-center mb-4">Lista de Artículos</h1>

        <!-- Table for Articles -->
        <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>ID</th>
              <th>Título</th>
              <th>Descripción</th>
              <th>Fecha de Creación</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @articles.each do |article| %>
              <tr>
                <td><%= article.id %></td>
                <td><%= article.title %></td>
                <td><%= truncate(article.text, length: 100) %></td> <!-- Muestra una descripción corta del artículo -->
                <td><%= article.created_at.strftime('%d-%m-%Y') %></td>
                <td>
                  <!-- Acciones: Ver, Editar, Eliminar -->
                  <%= link_to 'Ver', article_path(article), class: 'btn btn-info btn-sm' %>
                  <%= link_to 'Editar', edit_article_path(article), class: 'btn btn-warning btn-sm' %>
                  <%= button_to 'Eliminar', article_path(article), method: :delete, data: { confirm: '¿Estás seguro de que quieres eliminar este artículo?' }, class: 'btn btn-danger btn-sm' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <!-- Link to create a new article -->
        <div class="mt-4 text-center">
          <%= link_to 'Nuevo Artículo', new_article_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="text-center">
      <div class="footer-below">
        <div class="container">
          <div class="col-lg-12">
            <h3>Ingeniería en Telemática</h3>
            <ul class="list-inline">
              <li class="list-inline-item">
                <a class="btn-social btn-outline" href="#">
                  <i class="fa fa-fw fa-facebook"></i>
                </a>
              </li>
              <li class="list-inline-item">
                <a class="btn-social btn-outline" href="#">
                  <i class="fa fa-fw fa-twitter"></i>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </footer>

    <!-- Scroll to Top Button -->
    <div class="scroll-top d-lg-none">
      <a class="btn btn-primary js-scroll-trigger" href="">
        <i class="fa fa-chevron-up"></i>
      </a>
    </div>

    <!-- Bootstrap core JavaScript -->
    <script src="assets/jquery.min.js"></script>
    <script src="assets/bootstrap.bundle.min.js"></script>
    <script src="assets/freelancer.min.js"></script>
  </body>
</html>
